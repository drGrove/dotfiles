[user]
	name = Danny Grove
	email = danny@drgrovellc.com
	signingkey = C92FE5A3FBD58DD3EC5AA26BB10116B8193F2DBD
[color]
	ui = true
[push]
	default = upstream
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = difftool
[core]
	editor = vim
[gpg]
	program = /usr/bin/gpg2
[credential]
	helper = cache
[commit]
  gpgSign = true
[diff "gpg"]
  textconv = gpg --no-tty --decrypt --quiet
  cachetextconv = false
[diff "ansible-vault"]
  textconv = ansible-vault view
  cachetextconv = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
