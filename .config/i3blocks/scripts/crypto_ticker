COIN="${BLOCK_INSTANCE:-BTC}"

raw_data=$( \
	curl -s "https://production.api.coindesk.com/v2/tb/price/ticker?assets=$COIN" | \
  jq ".data.${COIN}.ohlc.c, .data.${COIN}.change.value"
)

IFS=$'\n' read -d '' -r -a data <<<"$raw_data"

price=${data[0]}
change=${data[1]}

printf " $%.2f\n" "$price"
echo ""

if [ $change > 0 ]; then
  echo \#FF0000
elif [ $change <  0 ]; then
  echo \#00FF00
else
  echo \#0000FF
fi
